<div id="header">
  <div class="logo_top">
    <img src="images/logo.png">
  </div>
  <div class="slogan_top">
    <img src="images/slogan.png">
  </div>
  <div class="slogan_top2">
    <img src="images/slogan2.png">
  </div>
  <ul class="menu">
    <li><a id="btn" href="/"/>Institucional</a></li>
    <li><a id="btn" href="/noticias"/>Noticias</a></li>
    <li><a id="btn" href="/actividades"/>Actividades</a></li>
    <li><a id="btn" href="/aboutus"/>Quienes somos?</a></li>
    <li><a id="btn" href="https://www.facebook.com/centrodeestudiosydesarrollo/photos_albums"/>Fotos</a></li>
    <% if (session[:user].nil?) %>
      <li><a id="btn_login" href="#" onclick="$('#login-box').reveal();"/>Login</a></li>
    <%else%>
      <li>
        <a id="btn_login" href="/user/logout" >logout</a>
        
      </li>
    <%end%>
  </ul>
</div>
<div id="login-box" class="login-popup reveal-modal">
  <form method="post" class="formee" action="/user/login">
    <fieldset class="textbox">
      <div class="grid-6-12">
        <label class="username">
          <label>Usuario o E-mail</label>
          <input id="username" name="username" value="" type="text" autocomplete="on" placeholder="Username">
        </label>
      </div>
      <div class="grid-6-12">
        <label class="password">
          <label>Password</label>
          <input id="password" name="password" value="" type="password" placeholder="Password">
        </label>
       </div> 
      <input id="loginbtn" class="submit button" type="submit"></input>  
    </fieldset>
  </form>
</div>